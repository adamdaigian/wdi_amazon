<h1>All Reviews</h1>

<ul>
  <% @reviews.each do |review| %>
    <li>
      <%= link_to review.content, review_path(review.id) %> -
      <%= link_to "Edit", edit_item_path(review.id) %> -
      <%= link_to "Delete", review_path(review.id), :method => "delete", :confirm => "Are you sure?" %>
    </li>
  <% end %>
</ul>