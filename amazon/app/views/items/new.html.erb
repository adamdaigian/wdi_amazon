<h1>New Item</h1>

<%= form_for @item, :url => items_path, :method => "post" do |f| %>

<div>
    <%= f.label :title %>
    <%= f.text_field :title %>


<div>
    <%= f.label :description %>
    <%= f.text_field :description %>
</div>

<div>
    <%= f.label :price %>
    <%= f.text_field :price %>
</div>

<div>
    <%= f.submit %>
</div>
	<% end %>