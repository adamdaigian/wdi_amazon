<h1>Edit Item</h1>

<%= form_for @item, :url => item_path(@item.id), :method => "put" do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :price %><br />
    <%= f.text_area :price %>
  </div>

  <div>
    <%= f.button %>
  </div>
<% end %>